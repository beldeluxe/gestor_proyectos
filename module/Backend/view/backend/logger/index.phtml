<script type="application/javascript">
    function more(){
        var punteroVal = $('#puntero').val();
        $.ajax({
            type: 'GET',
            dataType: "json",
            url: "/admin/logger/index",
            data: {
                puntero: punteroVal
            },
            success: function (data) {
                if (data.fin){
                    $('#loadMore').hide();
                }else {
                    $('#puntero').val(data.puntero);
                    $('#contenidoLog').append(data.texto);
                }
            }
        });
    }


</script>